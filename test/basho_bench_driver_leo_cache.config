{mode, max}.
{duration, 5}.
{concurrent, 8}.

{driver, basho_bench_driver_leo_cache}.
{code_paths, ["deps/leo_cache",
              "deps/leo_mcerl",
              "deps/leo_dcerl",
              "deps/leo_commons"]}.

